<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.messapp.iitmandi.messapp.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_frame">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--<Spinner
                android:id="@+id/spinner_day"
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="34dp"
                android:prompt="@string/day_prompt"
                android:entries="@array/day_string"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/day_selected_linear_layout"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_height="50dp"
                android:weightSum="100"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/spinner_time"
                    android:layout_width="wrap_content"
                    android:popupElevation="4dp"
                    android:layout_weight="90"
                    android:layout_height="50dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider"
                    android:layout_margin="5dp"/>
                <Button style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"
                    android:layout_below="@id/spinner_time"
                    android:text="@string/go"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/day_selected"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="5dp"
                android:layout_below="@id/day_selected_linear_layout"
                android:background="@color/divider"/>
            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@id/progressBar"
                android:visibility="invisible"
                android:layout_centerInParent="true"
                />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp"
                android:layout_below="@id/day_selected_linear_layout"
                android:id="@+id/scrollView2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:id="@+id/feedback_linear_layout"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner_item"
                        android:layout_width="match_parent"
                        android:popupElevation="4dp"
                        android:layout_height="50dp"/>
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/divider"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <EditText
                            android:inputType="textMultiLine"
                            android:lines="20"
                            android:minLines="1"
                            android:gravity="top|left"
                            android:hint="Feedback"
                            android:maxLines="20"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:scrollbars="vertical"
                            android:id="@+id/editText_feedback"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <RatingBar
                        android:id="@+id/ratingBar"
                        android:isIndicator="false"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center_horizontal"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleX="0.5"
                        android:scaleY="0.5"
                        android:layout_centerHorizontal="true"
                        />
                    <Button
                        android:id="@+id/button_submit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="SUBMIT"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_margin="5dp"
                        android:layout_marginTop="40dp"
                        android:background="@color/colorAccent"
                        android:textSize="15dp"
                        android:textColor="@android:color/black"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </FrameLayout>
</FrameLayout>
