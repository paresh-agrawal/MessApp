<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd"
    tools:context="com.messapp.iitmandi.messapp.Credits">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/app_credits_layout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Developer"
            android:id="@+id/tv_app_developer"
            android:textColor="@color/primary_text"
            android:textStyle="bold"
            android:textSize="17dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:layout_marginTop="15dp"/>
        <android.support.v7.widget.CardView
            android:id="@+id/app_developer_cardView"
            android:elevation="6dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/cardview_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="18dp"
                    android:elevation="4dp"
                    android:src="@drawable/developer"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/cardview_image"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/cardview_list_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:paddingBottom="5dp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:text="Paresh K. Agrawal"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/short_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="B.Tech 2016 Batch"
                    android:textColor="@color/primary_text"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:id="@+id/github_link"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/github_logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/githubId"/>
                </LinearLayout>
                </LinearLayout>




            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

</FrameLayout>
